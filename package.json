{
  "name": "@mynt/ui",
  "version": "1.0.0",
  "description": "A beautiful, framework-agnostic web component library blending Material Design 3, Tailwind, and Bulma aesthetics",
  "main": "src/index.js",
  "type": "module",
  "files": [
    "src/",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "python3 start-dev.py",
    "serve": "node examples/serve.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:visual": "cypress run --spec 'cypress/e2e/component-gallery.cy.js'",
    "build": "echo 'Build step not needed - components are native ES modules'",
    "lint": "echo 'Linting with browser-native validation'",
    "start": "npm run dev",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "shadow-dom",
    "framework-agnostic",
    "ui-library",
    "material-design",
    "material-design-3",
    "tailwind",
    "bulma",
    "vanilla-javascript",
    "responsive",
    "accessibility",
    "a11y",
    "design-system",
    "component-library"
  ],
  "author": "MyntUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mynt-ui.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mynt-ui/issues"
  },
  "homepage": "https://github.com/your-org/mynt-ui#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/html-vite": "^9.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@vitest/coverage-v8": "^2.1.4",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.21",
    "cypress": "^15.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "storybook": "^9.1.3",
    "tailwindcss": "^4.1.12",
    "vitest": "^2.1.4"
  }
}
